
@model BlogAppMvc4.Models.Opinion.Opinion
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
 
@using (Html.BeginForm())
{
 @Html.ValidationSummary(true)

@* @{Model.infodate=DateTime.Now.ToString();}*@
 <fieldset>
    <legend>Blog</legend>
        <table cellspacing="6">
        @Html.HiddenFor(model =>model.OpnID)
          <tr>
              <td>@Html.LabelFor(model => model.Category) </td> 
              <td>@Html.DropDownList("Category", new List<SelectListItem> 
             {
             new SelectListItem{Text="History",Value="History"},
             new SelectListItem{Text="Movie",Value="Movie"},
             new SelectListItem{Text="Poem",Value="Poem"},
             new SelectListItem{Text="Article",Value="Article"}
             
             },"--Please Select--")
                  @Html.ValidationMessageFor(model => model.Category) </td>
          </tr>

          <tr>
              <td>@Html.LabelFor(model => model.Title)</td>
             <td>@Html.EditorFor(model => model.Title)
                @Html.ValidationMessageFor(model => model.Title) </td> 
         </tr>

         <tr>
            <td>@Html.LabelFor(model => model.Contents)  </td>
            <td>@Html.TextAreaFor(model => model.Contents)
                @Html.ValidationMessageFor(model => model.Contents)</td>
        </tr>  
       
         @Html.HiddenFor(model =>model.infodate)
      @*    @Html.HiddenFor(model=>model.Email)*@
          @Html.HiddenFor(model =>model.UserID)
  
        <tr><td>&nbsp;</td><td><input type="submit" value="Submit" /></td></tr>
        </table>   
      
 </fieldset>

}
<div>
    @Html.ActionLink("Back to List", "OpinView")
</div>
