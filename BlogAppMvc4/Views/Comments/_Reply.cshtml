@model BlogAppMvc4.Models.Opinion.Comment

<script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Reply</legend>

        <table cellspacing="6">
        @Html.HiddenFor(model =>model.CmtID)
        @Html.HiddenFor(model=>model.OpnID)
        @Html.HiddenFor(model =>model.infodate)
        @Html.HiddenFor(model=>model.UserID)

         <tr>
            <td>@Html.LabelFor(model => model.Contents)  </td>
            <td>@Html.TextAreaFor(model => model.Contents)
                @Html.ValidationMessageFor(model => model.Contents)</td>
        </tr>  

        <tr><td>&nbsp;</td><td><input type="submit" value="Submit" /></td></tr>
        </table>   
    </fieldset>
}
